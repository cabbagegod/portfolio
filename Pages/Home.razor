@code {
    private RenderFragment GetCards(IEnumerable<CardGroup> groups) {
        return
            @<div>
                @foreach (CardGroup group in groups) {
                    <CardGroup>
                        @foreach (ProjectItem item in group.Items) {
                            <Card>
                                @if (!string.IsNullOrEmpty(item.Src)) {
                                    <CardTitle class="generic-text" Style="margin-top: 5px">
                                        @item.Title
                                        @if (!string.IsNullOrEmpty(item.Github)) {
                                            <a href=@item.Github>
                                                <Icon Name="IconName.Github" Color="IconColor.White"
                                                      Style="margin-left: 5px"/>
                                            </a>
                                        }
                                    </CardTitle>
                                    <Image Class="rounded" Src="@item.FullSrc"/>
                                    <CardBody>
                                        <CardText
                                            Style="margin-left: 20px; margin-top: 10px; margin-bottom: 0">@item.Description</CardText>
                                    </CardBody>
                                    <CardFooter>
                                        @if (item.Skills.Count > 0) {
                                            <Card>
                                                <p class="model-text">Top Skills:</p>
                                                <div class="model-value">
                                                    @foreach (string skill in item.Skills) {
                                                        <div class="model-value">
                                                            <Button Color="ButtonColor.Secondary"
                                                                    Outline="true">@skill</Button>
                                                        </div>
                                                    }
                                                </div>
                                            </Card>
                                        }
                                    </CardFooter>
                                }
                            </Card>
                        }
                    </CardGroup>
                }
            </div>;
    }
}

